{
  "name": "transcurse",
  "version": "0.1.0-beta",
  "description": "Library for recursive transformations",
  "main": "index.js",
  "repository": "https://www.github.com/GregRos/transcurse",
  "author": "GregRos",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "tsc",
    "build:clean": "npm-run-all clean build",
    "test": "nyc ava",
    "test:no-cover": "node node_modules/ava/cli.js",
    "docs": "node dist/generate-docs/run.js",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix",
    "package:publish": "npm-run-all lint build:clean test && node dist/publish.js && (cd .publish; yarn publish)"
  },
  "dependencies": {
  },
  "devDependencies": {
    "lodash": "^4.17.15",
    "@types/lodash": "^4.14.149",
    "@types/node": "12.12.8",
    "@types/shelljs": "^0.8.6",
    "ava": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "retarget-sourcemaps-after-move": "^0.2.0",
    "shelljs": "^0.8.3",
    "source-map-support": "^0.5.16",
    "tslint": "^5.0.0",
    "tslint-config-gregros": "^1.6.0",
    "typescript": "3.7.2"
  },
  "nyc": {
    "produce-source-map": true,
    "include": [
      "dist/lib/**/*.js",
      "src/lib/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true
  },
  "ava": {
    "verbose": true,
    "files": [
      "dist/test/**/*.spec.js"
    ]
  }
}
